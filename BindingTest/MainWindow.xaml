<Window x:Class="BindingTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BindingTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Columns="2">
        <UniformGrid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="0 0 0 10"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="Padding" Value="1"/>
            </Style>
        </UniformGrid.Resources>
        <StackPanel Margin="5">
            <Label Content="Jméno"/>
            <TextBox x:Name="NameTxt"/>

            <Label Content="Rok narození"/>
            <TextBox x:Name="BirthYearTxt"/>

            <Label Content="Pracovní pozice"/>
            <TextBox x:Name="PositionTxt"/>
        </StackPanel>

        <StackPanel Margin="5">
            <Label Content="Příjmení"/>
            <TextBox x:Name="SurenameTxt"/>

            <Label Content="Nejvyšší dokončené vzdělání"/>
            <TextBox x:Name="EducationTxt"/>

            <Label Content="Hrubý plat"/>
            <TextBox x:Name="SalaryTxt" Text="{Binding Salary, Mode=TwoWay}"/>
        </StackPanel>
    </UniformGrid>
</Window>
